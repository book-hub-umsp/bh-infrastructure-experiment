{
  "name": "bh-infrastructure",
  "version": "1.0.0",
  "type": "module",
  "description": "Infrastructure for Book Hub with PostgREST and placeholder backend",
  "author": "AllayBro",
  "license": "MIT",
  "scripts": {
    "start": "node -e \"require('express')().get('/',(_,res)=>res.send('Hello from placeholder backend')).listen(4000)\"",
    "dev": "node scripts/scan.js",
    "placeholder-server": "node -e \"require('express')().get('/',(_,res)=>res.send('Hello from placeholder backend')).listen(4000)\"",
    "build": "babel src --out-dir dist",
    "test": "jest --coveragÐ«e",
    
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "graphql-scan": "node scripts/scan.js",
    "graphql": "^16.8.1",
    "generate-types": "graphql-codegen --config codegen.yml",
    "precommit": "npm run lint && npm run test"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-request": "^7.1.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.13.5",
    "@graphql-codegen/typescript": "^2.7.2",
    "babel-cli": "^6.0.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^8.0.0",
    "eslint-plugin-graphql": "^4.0.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "nodemon": "^2.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "plugins": [
      "graphql"
    ],
    "rules": {
      "graphql/template-strings": [
        "error",
        {
          "env": "apollo",
          "schemaJson": "./schema.json"
        }
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  }
}
